@model BrnMall.Web.Mobile.Models.SafeUpdateModel
@{
    Layout = null;
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>账户安全-@{@WorkContext.MallConfig.SiteTitle}触屏版</title>
    @Html.Raw(WorkContext.MallConfig.SEOKeyword)
    @Html.Raw(WorkContext.MallConfig.SEODescription)
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <link href="@{@WorkContext.CSSCDN}/mobile/css/base.css" rel="stylesheet" type="text/css">
    <link href="@{@WorkContext.CSSCDN}/mobile/css/ucenter.css" rel="stylesheet" type="text/css">
    <script src="@{@WorkContext.ScriptCDN}/mobile/scripts/jquery.js" type="text/javascript"></script>
    <script src="@{@WorkContext.ScriptCDN}/mobile/scripts/common.js" type="text/javascript"></script>
    <script src="@{@WorkContext.ScriptCDN}/mobile/scripts/ucenter.safe.js" type="text/javascript"></script>
</head>

<body>
@Html.Partial("_header")
<script type="text/javascript">
    $("#headerTitle").html("账户安全");
</script>


<div class="userForm">

<div class="userFormT">
<ul>
<li class="T1"><span class="hot">1</span></li>
<li class="Tline"><strong></strong></li>
<li class="T2"><span>2</span></li>
</ul>
</div>

<div class="userFormT" style="padding:0 20px;">
<ul>
<li style="width:96px;">身份验证</li>
<li>&nbsp;</li>
<li style="width:96px; text-align:right;">修改安全信息</li>
</ul>
</div>

<div class="userFormC">
@if (Model.Action == "updatepassword")
{
    <form name="updatePasswordForm" action="">
        <input type="hidden" name="v" value="@Model.V"/>
        <div class="con"><input type="password" name="password" class="text" placeholder="新密码" /></div>
        <div class="con"><input type="password" name="confirmPwd" class="text" placeholder="确认密码" /></div>
        <div class="con"><input type="text" name="verifyCode" class="text" style="width:92%; float:left;" placeholder="请输入图片验证码" /><img onclick="this.src='/mob/tool/verifyimage?time=' + new Date()" src="/mob/tool/verifyimage" style="width:6%; float:right; height:26px;" /><div class="clear"></div></div>
        <div class="con"><a href="javascript:updatePassword()" class="redBt formSub">提交</a></div>
    </form>
}
else if (Model.Action == "updatemobile")
{
    <form name="updateMobileForm" action="">
        <input type="hidden" name="v" value="@Model.V"/>
        <div class="con"><input type="text" name="mobile" class="text" placeholder="新手机号" /></div>
        <div class="tip"><a href="javascript:sendUpdateMobile()" class="redBt">获取短信验证码</a></div>
        <div class="con"><input type="text" name="moibleCode" class="text" placeholder="手机校验码" /></div>
        <div class="con"><input type="text" name="verifyCode" class="text" style="width:92%; float:left;" placeholder="请输入图片验证码" /><img onclick="this.src='/mob/tool/verifyimage?time=' + new Date()" src="/mob/tool/verifyimage" style="width:6%; float:right; height:26px;" /><div class="clear"></div></div>
        <div class="con"><a href="javascript:updateMobile()" class="redBt formSub">提交</a></div>
    </form>
}
else if (Model.Action == "updateemail")
{
    <form name="updateEmailForm" action="">
        <input type="hidden" name="v" value="@Model.V"/>
        <div class="con"><input type="text" name="email" class="text" placeholder="新邮箱" /></div>
        <div class="con"><input type="text" name="verifyCode" class="text" style="width:92%; float:left;" placeholder="请输入图片验证码" /><img onclick="this.src='/mob/tool/verifyimage?time=' + new Date()" src="/mob/tool/verifyimage" style="width:6%; float:right; height:26px;" /><div class="clear"></div></div>
        <div class="con"><a href="javascript:sendUpdateEmail()" class="redBt formSub">提交</a></div>
    </form>
}
</div>

</div>



@Html.Partial("_footer")
</body>
</html>
