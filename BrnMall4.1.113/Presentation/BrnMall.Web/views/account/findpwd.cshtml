@model BrnMall.Web.Models.FindPwdModel
@{
    Layout = null;
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>找回密码-@{@WorkContext.MallConfig.SiteTitle}</title>
    @Html.Raw(WorkContext.MallConfig.SEOKeyword)
    @Html.Raw(WorkContext.MallConfig.SEODescription)
    <link href="@{@WorkContext.CSSCDN}/css/base.css" rel="stylesheet" type="text/css" />
    <link href="@{@WorkContext.CSSCDN}/css/account.css" rel="stylesheet" type="text/css" />
    <script src="@{@WorkContext.ScriptCDN}/scripts/jquery.js" type="text/javascript"></script>
    <script src="@{@WorkContext.ScriptCDN}/scripts/account.js" type="text/javascript"></script>
    <script type="text/javascript">
        shadowName = "@Model.ShadowName";
    </script>
</head>

<body>

<div id="loginTop" class="box">
    <a href="/" class="left"><img src="@{@WorkContext.ImageCDN}/images/logo.png" width="186" height="42" /></a>
    <h2>找回密码</h2>
    <div class="clear"></div>
</div>

<div class="findPassword box">
<div class="step">
<ul>
    <li class="hot"><s>1</s>验证身份</li>
    <li><s>2</s>验证邮箱</li>
    <li><s>4</s>设置新密码</li>
    <li><s>4</s>完成</li>
    <div class="clear"></div>
</ul>
</div>

<form name="findPwdForm" action="">
<table width="100%" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <th width="190"><em>*</em>账户名：</th>
    <td width="275"><input type="text" name="@Model.ShadowName" value="" class="text userName" /></td>
    <td>&nbsp;</td>
  </tr>
  @if (Model.IsVerifyCode)
  { 
  <tr>
    <th><em>*</em>验证码：</th>
    <td><table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
    <td width="132"><input type="text" name="verifyCode" autocomplete="off" class="YZM text" /></td>
    <td><img id="verifyImage" width="100" height="36" style="margin-left:5px;" title="点击刷新验证码" onclick="this.src='/tool/verifyimage?time=' + new Date()" src="/tool/verifyimage" /></td>
    </tr>
    </table>
    </td>
    <td>@*<div class="tipBox"><a href="#">看不清？换一张</a></div>*@</td>
  </tr>
  }
  <tr>
    <td align="right">&nbsp;</td>
    <td><a href="#" class="passBt redBT" onclick="findPwd()">提交</a></td>
    <td>&nbsp;</td>
  </tr>
</table>
</form>
</div>


@Html.Partial("_footer")
</body>
</html>
