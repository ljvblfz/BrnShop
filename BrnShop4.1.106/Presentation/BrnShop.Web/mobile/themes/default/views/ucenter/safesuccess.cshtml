@model BrnShop.Web.Mobile.Models.SafeSuccessModel
@{
    Layout = null;
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>修改成功-@{@WorkContext.ShopConfig.SiteTitle}触屏版</title>
    @Html.Raw(WorkContext.ShopConfig.SEOKeyword)
    @Html.Raw(WorkContext.ShopConfig.SEODescription)
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <link href="@{@WorkContext.CSSCDN}/mobile/themes/default/css/base.css" rel="stylesheet" type="text/css">
    <link href="@{@WorkContext.CSSCDN}/mobile/themes/default/css/ucenter.css" rel="stylesheet" type="text/css">
    <script src="@{@WorkContext.ScriptCDN}/mobile/scripts/jquery.js" type="text/javascript"></script>
    <script src="@{@WorkContext.ScriptCDN}/mobile/scripts/common.js" type="text/javascript"></script>
</head>

<body>
@Html.Partial("_header")
<script type="text/javascript">
    $("#headerTitle").html("账户安全");
</script>


<div class="userForm">

<div class="userFormT">
<ul>
<li class="T1"><span>1</span></li>
<li class="Tline"><strong></strong></li>
<li class="T2"><span class="hot">2</span></li>
</ul>
</div>

<div class="userFormT" style="padding:0 20px;">
<ul>
<li style="width:96px;">身份验证</li>
<li>&nbsp;</li>
<li style="width:96px; text-align:right;">修改安全信息</li>
</ul>
</div>

<div class="userFormC">
    @if (Model.Action == "updatepassword")
    {
        @:密码更新成功
    }
    else if (Model.Action == "updatemobile")
    {
        @:手机更新成功
    }
    else if (Model.Action == "updateemail")
    {
        @:邮箱更新成功：@Model.Remark
    }
</div>

</div>


@Html.Partial("_footer")
</body>
</html>
