@{
    Layout = null;
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>账户中心-@{@WorkContext.ShopConfig.SiteTitle}触屏版</title>
    @Html.Raw(WorkContext.ShopConfig.SEOKeyword)
    @Html.Raw(WorkContext.ShopConfig.SEODescription)
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <link href="@{@WorkContext.CSSCDN}/mobile/themes/default/css/base.css" rel="stylesheet" type="text/css">
    <link href="@{@WorkContext.CSSCDN}/mobile/themes/default/css/ucenter.css" rel="stylesheet" type="text/css">
    <script src="@{@WorkContext.ScriptCDN}/mobile/scripts/jquery.js" type="text/javascript"></script>
    <script src="@{@WorkContext.ScriptCDN}/mobile/scripts/common.js" type="text/javascript"></script>
</head>

<body>
@Html.Partial("_header")
<script type="text/javascript">
    $("#headerTitle").html("账户中心");
</script>

<div class="userInfo">
<ul>
<li><a href="@Url.Action("safeverify", new RouteValueDictionary { { "act", "updatePassword" } })">登录密码<span></span></a></li>
<li><a href="@Url.Action("safeverify", new RouteValueDictionary { { "act", "updateEmail" } })">
        @if (WorkContext.PartUserInfo.Email.Length > 0)
        {
            if (WorkContext.PartUserInfo.VerifyEmail == 0)
            {
                @:验证邮箱
            }
            else
            {
                @:修改邮箱
            }
        }
        else
        {
            @:绑定邮箱
        }
<span></span></a></li>
<li><a href="@Url.Action("safeverify", new RouteValueDictionary { { "act", "updateMobile" } })">
        @if (WorkContext.PartUserInfo.Mobile.Length > 0)
        {
            if (WorkContext.PartUserInfo.VerifyMobile == 0)
            {
                @:验证手机
            }
            else
            {
                @:修改手机
            }
        }
        else
        {
            @:绑定手机
        }
<span></span></a></li>
<li><a href="@Url.Action("shipaddresslist")">收货地址<span></span></a></li>
</ul>
</div>



@Html.Partial("_footer")
</body>
</html>
