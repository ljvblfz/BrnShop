@model BrnShop.Web.Mobile.Models.ProductConsultListModel
@{
    Layout = null;
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>@Model.ProductInfo.Name-咨询列表 @{@WorkContext.ShopConfig.SiteTitle}触屏版</title>
    @Html.Raw(WorkContext.ShopConfig.SEOKeyword)
    @Html.Raw(WorkContext.ShopConfig.SEODescription)
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <link href="@{@WorkContext.CSSCDN}/mobile/themes/default/css/base.css" rel="stylesheet" type="text/css">
    <link href="@{@WorkContext.CSSCDN}/mobile/themes/default/css/content.css" rel="stylesheet" type="text/css">
    <script src="@{@WorkContext.ScriptCDN}/mobile/scripts/jquery.js" type="text/javascript"></script>
    <script src="@{@WorkContext.ScriptCDN}/mobile/scripts/common.js" type="text/javascript"></script>
</head>

<body>
@Html.Partial("_header")
<script type="text/javascript">
    $("#headerTitle").html("咨询列表");
</script>

<div class="QA">
@foreach (ProductConsultInfo info in Model.ProductConsultList)
{
<a href="javascript:void(0);" class="to_detail">
<ul>
  <li class="q">
    @info.ConsultMessage<br>
    <span class="gray">@info.ConsultNickName</span>
    <span class=" gray fr">@info.ConsultTime</span> 
  </li>
  <li class="a">@info.ReplyMessage</li>
</ul>
</a>
}
</div>


@if (Model.ProductConsultList.Count > 0)
{
<div class="selectPage">
@if (Model.PageModel.HasPrePage)
{ 
    <a href = "@Url.Action("productconsultlist", new RouteValueDictionary { { "pid", Model.ProductInfo.Pid }, { "page", Model.PageModel.PrePageNumber } })">上一页</a>
}
else
{
    <a href="javascript:;">上一页</a>
}
@if (Model.PageModel.HasNextPage)
{
    <a href = "@Url.Action("productconsultlist", new RouteValueDictionary { { "pid", Model.ProductInfo.Pid }, { "page", Model.PageModel.NextPageNumber } })">下一页</a>
}
else
{
    <a href="javascript:;">下一页</a>
} 
</div>
}


@Html.Partial("_footer")
</body>
</html>
