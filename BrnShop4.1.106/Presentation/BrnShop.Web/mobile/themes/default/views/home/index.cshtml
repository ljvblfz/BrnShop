@{
    Layout = null;
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>@{@WorkContext.ShopConfig.SiteTitle}触屏版</title>
    @Html.Raw(WorkContext.ShopConfig.SEOKeyword)
    @Html.Raw(WorkContext.ShopConfig.SEODescription)
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <link href="@{@WorkContext.CSSCDN}/mobile/themes/default/css/base.css" rel="stylesheet" type="text/css">
    <link href="@{@WorkContext.CSSCDN}/mobile/themes/default/css/home.css" rel="stylesheet" type="text/css">
    <script src="@{@WorkContext.ScriptCDN}/mobile/scripts/jquery.js" type="text/javascript"></script>
    <script src="@{@WorkContext.ScriptCDN}/mobile/scripts/common.js" type="text/javascript"></script>
    <link href="@{@WorkContext.ScriptCDN}/mobile/scripts/swiper.css" rel="stylesheet" type="text/css">
    <script src="@{@WorkContext.ScriptCDN}/mobile/scripts/swiper.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            //图片展示滑动
            var mySwiper = new Swiper('.swiper-container', {
                pagination: '.swiper-pagination',
                loop: true,
                autoplay: 5000
            });
        });
    </script>
</head>

<body>
<div class="viewport">
  <div class="headerBar">
    <div class="tbCell"><img src="@{@WorkContext.ImageCDN}/mobile/themes/default/images/logo.png" height="28" width="122"></div>
    <div class="tbCell" style="width:80%">
      <div class="search-textfile"><a href="javascript:search(document.getElementById('keyword').value)" class="searchBt"></a><input autocomplete="off" name="keyword" id="keyword" class="searchText"></div>
    </div>
    <div class="tbCell"><a href="@Url.Action("list", "category")" class="menu">分类</a></div>
  </div>
  
  <div class="homeBanner floor">
      @{
          List<AdvertInfo> bannerList = Adverts.GetAdvertList(46);
    }
    <div class="sliderBox swiper-container">
      <ul class="slider swiper-wrapper">
        @foreach (AdvertInfo info in bannerList)
        {
        <li class="swiper-slide"><a href="@info.Url"><img src="@{@WorkContext.ImageCDN}/upload/adv/@info.Image"></a></li>
        }
      </ul>
      <div class="swiper-pagination"></div>
    </div>
    <nav class="app-nav">
        <a href="@Url.Action("index", "cart")" class="app-link shopping-cart">购物车</a> 
        <a href="#" class="app-link recharge">充值</a> 
        <a href="#" class="app-link lottery">彩票</a> 
        <a href="@Url.Action("index", "ucenter")" class="app-link my">个人中心</a> 
    </nav>
  </div>
  
  <div class="floorI floor">
    <h2 class="title">12.12狂欢购</h2>
    <div class="floorCon"> 
        @{
            List<AdvertInfo> floor1AdvertList = Adverts.GetAdvertList(34);
        }
        <a href="@floor1AdvertList[0].Url" class="itmeL left"><img src="@{@WorkContext.ImageCDN}/upload/adv/@floor1AdvertList[0].Image" border="0"></a> 
        <a href="@floor1AdvertList[1].Url" class="itmeR itmeR1 right"><img src="@{@WorkContext.ImageCDN}/upload/adv/@floor1AdvertList[1].Image" width="100%" border="0"></a> 
        <a href="@floor1AdvertList[2].Url" class="itmeR right"><img src="@{@WorkContext.ImageCDN}/upload/adv/@floor1AdvertList[2].Image" width="100%" border="0"></a>
        <div class="clear"></div>
    </div>
  </div>
  
  <div class="floorI floor floorI2">
    <h2 class="title">感恩回馈</h2>
    <div class="floorCon">
        @{
            List<AdvertInfo> floor2AdvertList = Adverts.GetAdvertList(35);
        }
      <div class="left" style="width:50%">
      <a href="@floor2AdvertList[0].Url" class="itmeR itmeR1"><img src="@{@WorkContext.ImageCDN}/upload/adv/@floor2AdvertList[0].Image" width="100%" border="0"></a> 
      <a href="@floor2AdvertList[1].Url" class="itmeR"><img src="@{@WorkContext.ImageCDN}/upload/adv/@floor2AdvertList[1].Image" width="100%" border="0"></a>
      </div>
      <a href="@floor2AdvertList[2].Url" class="itmeL right"><img src="@{@WorkContext.ImageCDN}/upload/adv/@floor2AdvertList[2].Image" border="0"></a>
      <div class="clear"></div>
    </div>
  </div>
  
  <div class="floorI floor">
    <h2 class="title">十年店庆</h2>
    <div class="floorCon"> 
        @{
            List<AdvertInfo> floor3AdvertList = Adverts.GetAdvertList(36);
        }
        <a href="@floor3AdvertList[0].Url" class="itme left"><img src="@{@WorkContext.ImageCDN}/upload/adv/@floor3AdvertList[0].Image" width="100%" border="0"></a>
        <div class="clear"></div>
    </div>
  </div>
  
  <div class="floor">
    <h2 class="title">主题馆（无限惊喜）</h2>
    <div class="floorCon sortList">
        @{
            List<AdvertInfo> floor4AdvertList = Adverts.GetAdvertList(37);
        }
      <ul>
        @foreach (AdvertInfo info in floor4AdvertList)
        {
        <li><a href="@info.Url"><b>@info.ExtField1</b><p>@info.ExtField2</p><img src="@{@WorkContext.ImageCDN}/upload/adv/@info.Image" width="100" height="100"> </a> </li>
        }
        <div class="clear"></div>
      </ul>
    </div>
  </div>
  
@Html.Partial("_footer")
</body>
</html>

